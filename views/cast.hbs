<style>
    * {
        margin: 0;
        padding: 0;
        line-height: 1.5;
    }

    .edit {
        padding: 10px 20px;
        text-align: center;
        position: absolute;
        right: 10%;
        top: 5%;
        border: none;
        border-radius: 5px;
        background-color: lightseagreen;
    }

    .categories {
        float: left;
        width: 25%;
    }

    a:link {
        text-decoration: none;
    }

    a {
        color: grey;
        padding: 20px;
        display: block;
        text-transform: uppercase;
    }

    a:hover {
        color: black;
    }

    .product-section {
        float: right;
        width: 75%;
        margin-top: 10%;
    }

    .product {
        display: inline-block;
        margin: 1% 2%;
        max-width: 40%;

    }

    h3 {
        color: green;
    }

    h4 {
        font-weight: bold;
        display: inline;
    }

    h5 {
        text-decoration: line-through;
        color: grey;
        display: inline;
    }

    h1 {
        padding: 5%;
    }
</style>

<div class="categories">
    <h1>Categories</h1>
    {{#each categories}}
    <a href="/categories/{{name}}/products">{{name}}</a>
    {{/each}}
</div>

<div class="product-section">
    <button class="edit">Edit Products</button>
    {{#each products}}
    <div class="product">
        <img src="../../{{shortname}}.jpeg" width='100px'>
        <h2>{{name}}</h2>
        <h3>{{specification}}</h3>
        <h4>₹{{new_price}}</h4>
        <h5>₹{{old_price}}</h5>
    </div>
    {{/each}}
</div>

<script>
    $('.edit').click(function () {
        location.href = "http://localhost:3000/products";
    })
</script>